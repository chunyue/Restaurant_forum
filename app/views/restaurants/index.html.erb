<div class="container">
  <div class="row">

        <ul class="nav nav-pills nav-pills-center">
          <li role="presentation" class="active"><%= link_to "全部餐廳", root_path %></li>
          <% @categories.each do |category| %>
          <li role="presentation"><%= link_to category.name, category_path(category) %></li>
          <% end %>
        </ul>
        
        <br>

      <!--restaurant list 有多寫restaurant-item的class style -->
     <div class="restaurants clearfix"> 
       <% @restaurants.each do |restaurant| %>
         <div class="col-sm-6 col-md-4">
           <div class="restaurant-item" style="width:90%;height:350px">

            <% if restaurant.image? %>
              <%= image_tag restaurant.image%> 
            <% else %>
               <span width="300px" class="glyphicon glyphicon-picture "> </span>
             <% end %>

            <div class="caption">
               <h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>
               <p class="label label-default"><%= restaurant.category.name %></p>
              <p><%= truncate(restaurant.description, length: 80) %></p>
             </div>
          </div>
         </div>  
      <% end %>
    </div>   
     

    <div class="text-center">
       <%= paginate @restaurants %>  
     </div>


  </div> <!--row-->
</div>  <!--container-->