<div class="container">
  <div class="row">
    <div>
      <div class="avatar col-md-4">
        <%= image_tag @user.avatar %>       
      </div>
      <div class="intro col-md-8">
          <h2><%= @user.name %></h2>
          <h5><%= @user.email %></h5>
          <br>
          <p><%= @user.intro %></p>

          <% if current_user.id == @user.id  %>
            <%= link_to 'Edit Profile',edit_user_path, class: "btn btn-primary" %>
          <% end %>
      </div>
      <!-- 更新資料按鈕 -->
      
      </div>

    </div>
  </div>
</div>